{
    "manifest_version": 2,
    "name": "To Do Helper",
    "description": "A simple to do list app",
    "version": "1.0.0",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }]
}